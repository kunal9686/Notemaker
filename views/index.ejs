<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Note App</title>
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>
    <div class="container">
        <h1>Notes</h1>
        <div class="button-container">
            <a href="/create" class="create-button">Create New Note</a>
        </div>
        <div class="file-list">
            <% if (kunnu.length === 0) { %>
                <p>No notes available.</p>
            <% } else { %>
                <% kunnu.forEach(file => { %>
                    <div class="file-item">
                        <a href="/<%= file %>" class="file-link"><%= file.replace('.txt', '') %></a>
                        <a href="/edit/<%= file %>" class="edit-button">Edit</a>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</body>
</html>
